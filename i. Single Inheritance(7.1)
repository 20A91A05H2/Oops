#include<iostream>
using namespace std;
/*base class*/
class base
{
	public:
		void base_class(void);
};
//function definition//
void base::base_class(void)
{
	cout<<"Base Class Method"<<endl;
}
/*derived class*/
class derived:public base
{
	public:
		void derived_class(void);
};
//function definition//
void derived::derived_class(void)
{
	cout<<"Derived Class Method"<<endl;
}
int main()
{
	derived objB;
	objB.base_class();
	objB.derived_class();
	return 0;
}


Output:

Base Class Method
Derived Class Method

--------------------------------
Process exited after 0.03971 seconds with return value 0
Press any key to continue . . .










